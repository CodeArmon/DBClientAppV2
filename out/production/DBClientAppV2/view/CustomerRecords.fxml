<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerRecords">
   <children>
      <TableView fx:id="customerRecordsTable" layoutX="16.0" layoutY="60.0" prefHeight="236.0" prefWidth="603.0">
        <columns>
          <TableColumn fx:id="appointmentIDCol" prefWidth="105.0" text="Appointment ID" />
          <TableColumn fx:id="customerNameCol" prefWidth="107.0" text="Customer Name" />
            <TableColumn fx:id="addressCol" prefWidth="75.0" text="Address" />
            <TableColumn fx:id="countryCol" prefWidth="55.0" text="Country" />
            <TableColumn fx:id="stateCol" prefWidth="104.0" text="State/Province" />
            <TableColumn fx:id="postalCodeCol" minWidth="0.0" prefWidth="75.0" text="Postal Code" />
            <TableColumn fx:id="phoneCol" prefWidth="81.0" text="Phone" />
        </columns>
      </TableView>
      <Button fx:id="saveCustomerButton" layoutX="96.0" layoutY="503.0" mnemonicParsing="false" onAction="#onSaveCustomer" text="Save Customer" />
      <Button fx:id="updateCustomerButton" layoutX="207.0" layoutY="503.0" mnemonicParsing="false" onAction="#onUpdateCustomer" text="Update Customer" />
      <Button fx:id="deleteCustomerButton" layoutX="331.0" layoutY="503.0" mnemonicParsing="false" onAction="#onDeleteCustomer" text="Delete Customer" />
      <Button fx:id="backButton" layoutX="731.0" layoutY="528.0" mnemonicParsing="false" onAction="#toMainMenu" text="Cancel" />
      <Label layoutX="281.0" layoutY="32.0" text="Customer Records">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="638.0" layoutY="64.0" text="Customer ID" />
      <Label layoutX="638.0" layoutY="96.0" text="Customer Name" />
      <Label layoutX="638.0" layoutY="129.0" text="Address" />
      <Label layoutX="640.0" layoutY="203.0" text="Postal Code" />
      <ComboBox fx:id="countryCombo" layoutX="638.0" layoutY="157.0" onAction="#onSelectCountry" prefWidth="150.0" promptText="Select Country" />
      <ComboBox fx:id="stateCombo" layoutX="812.0" layoutY="157.0" prefWidth="150.0" promptText="Select State/Province" />
      <Label layoutX="643.0" layoutY="241.0" text="Phone" />
      <TextField fx:id="customerIDTextField" disable="true" layoutX="813.0" layoutY="60.0" />
      <TextField fx:id="customerNameTextField" layoutX="813.0" layoutY="92.0" />
      <TextField fx:id="addressTextField" layoutX="813.0" layoutY="125.0" />
      <TextField fx:id="postalCodeTextField" layoutX="813.0" layoutY="199.0" />
      <TextField fx:id="phoneTextField" layoutX="813.0" layoutY="237.0" />
      <Button fx:id="clearButton" layoutX="775.0" layoutY="288.0" mnemonicParsing="false" onAction="#onClearButton" text="Clear Form" />
   </children>
</AnchorPane>
