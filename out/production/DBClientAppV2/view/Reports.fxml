<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Reports">
   <children>
      <Label layoutX="343.0" layoutY="14.0" text="Reports">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <ComboBox fx:id="appointmentComboBox" layoutX="470.0" layoutY="61.0" onAction="#onSelectAppointmentID" prefHeight="25.0" prefWidth="174.0" promptText="Select an Appointment" />
      <Button fx:id="viewReportButton" layoutX="476.0" layoutY="204.0" mnemonicParsing="false" onAction="#reportSubmit" text="View Report" />
      <Button fx:id="backButton" layoutX="618.0" layoutY="455.0" mnemonicParsing="false" onAction="#onToMain" text="Cancel" />
      <TableView fx:id="customerScheduleTable" layoutX="34.0" layoutY="239.0" prefHeight="200.0" prefWidth="631.0">
        <columns>
          <TableColumn fx:id="AppointmentIDColumn" prefWidth="147.0" text="Appointment ID" />
          <TableColumn fx:id="TitleColumn" prefWidth="36.0" text="Title" />
            <TableColumn fx:id="DescriptionColumn" prefWidth="100.0" text="Description" />
            <TableColumn fx:id="TypeColumn" prefWidth="75.0" text="Type" />
            <TableColumn fx:id="StartColumn" prefWidth="76.0" text="Start" />
            <TableColumn fx:id="EndColumn" prefWidth="81.0" text="End" />
