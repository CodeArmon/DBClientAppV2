        </columns>
      </TableView>
      <ComboBox fx:id="contactComboBox" layoutX="313.0" layoutY="204.0" prefWidth="150.0" promptText="Select a Contact" />
      <ComboBox fx:id="typeComboBox" layoutX="84.0" layoutY="48.0" onAction="#populateTypeReport" prefWidth="150.0" promptText="Select a Type" />
      <TableView fx:id="typeTableView" layoutX="52.0" layoutY="80.0" prefHeight="149.0" prefWidth="214.0">
        <columns>
          <TableColumn fx:id="countColumn" prefWidth="110.0" text="Count" />
          <TableColumn fx:id="monthColumn" prefWidth="103.0" text="Month" />
        </columns>
      </TableView>
      <Button fx:id="typeResultsButton" layoutX="248.0" layoutY="48.0" mnemonicParsing="false" onAction="#onTypeResults" text="Type Results" />
      <TextField fx:id="pricePerHourTextField" layoutX="565.0" layoutY="99.0" prefHeight="25.0" prefWidth="83.0" />
      <Label layoutX="470.0" layoutY="103.0" text="Price/Hour" />
      <Label layoutX="445.0" layoutY="138.0" text="Appointment Cost $" />
      <TextField fx:id="totalCostTextField" layoutX="565.0" layoutY="134.0" prefHeight="25.0" prefWidth="83.0" />
      <Button fx:id="calculateButton" layoutX="583.0" layoutY="172.0" mnemonicParsing="false" onAction="#onCalculate" text="Calculate" />
   </children>
